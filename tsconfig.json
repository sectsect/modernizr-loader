{
  "extends": "@spotify/tsconfig",
  "exclude": ["node_modules", "**/__tests__/*"],
  "types": ["@types/node"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "isolatedModules": false,
    "noEmit": false,
    "noImplicitThis": false,
    "sourceMap": false,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "webpack.config.js",
    "babel.config.js",
    "stylelint.config.js",
    "prettier.config.js"
  ],
}
